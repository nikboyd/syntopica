<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="CA" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>
<!-- 
	<appender name="RFA" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${java.io.tmpdir}/logs/services.log" />
		<param name="Threshold" value="INFO" />
		<param name="MaxFileSize" value="500KB" />
		<param name="MaxBackupIndex" value="5" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-22d{yyyy-MM-dd HH:mm:ss} %c - %m %n" />
		</layout>
	</appender>
 -->
	<logger name="org.hibernate">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.hibernate.hql">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.hibernate.type">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.springframework">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="java.sql">
		<level value="warn" />
		<appender-ref ref="CA" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="CA" />
		<!-- appender-ref ref="RFA" / -->
	</root>
</log4j:configuration>
